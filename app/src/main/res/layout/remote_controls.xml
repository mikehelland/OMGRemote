<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/back"
        android:padding="5dip"
        android:layout_margin="5dip"
        android:id="@+id/song_controls"
        android:orientation="vertical">

        <Button
            android:id="@+id/play_button"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:text="Play"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:background="#FF0000"
            android:textSize="32sp"/>

        <Button
            android:id="@+id/load_button"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:text="Load Jam"
            android:ellipsize="marquee"
            android:textSize="26sp"/>

        <Button
            android:id="@+id/add_channel_button"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:text="Add Channel"
            android:ellipsize="marquee"
            android:textSize="22sp"/>


        <Button
            android:id="@+id/key_button"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:text="C Major"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/bpm_button"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:text="120 bpm"
            android:textSize="24sp"/>

        <Button android:text="Chord"
            android:id="@+id/chordprogression_button"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:textSize="32sp"/>

        <Button android:text="Mixer"
            android:id="@+id/mixer_button"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:textSize="32sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/back"
        android:padding="5dip"
        android:layout_margin="5dip"
        android:id="@+id/instrument_list"
        android:orientation="vertical">


        </LinearLayout>
    </LinearLayout>