<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/back"
        android:padding="1dip"
        android:layout_margin="1dip"
        android:id="@+id/song_controls"
        android:orientation="vertical">

        <Button
            android:id="@+id/chordII_button"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:text="II"
            android:textColor="#000000"
            android:ellipsize="marquee"
            android:background="#888888"
            android:textSize="32sp"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/chordIII_button"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:text="III"
            android:textColor="#000000"
            android:ellipsize="marquee"
            android:background="#888888"
            android:textSize="32sp"
            android:layout_margin="5dp"/>


        <Button
            android:id="@+id/chordIV_button"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:text="IV"
            android:textColor="#000000"
            android:ellipsize="marquee"
            android:background="#888888"
            android:textSize="32sp"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/chordV_button"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:text="V"
            android:textColor="#000000"
            android:ellipsize="marquee"
            android:background="#888888"
            android:textSize="32sp"
            android:layout_margin="5dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/back"
        android:padding="5dip"
        android:layout_margin="5dip"
        android:orientation="vertical">


        <Button
            android:id="@+id/chordVb_button"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:text="Vb"
            android:textColor="#000000"
            android:ellipsize="marquee"
            android:background="#888888"
            android:textSize="32sp"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/chordVI_button"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:text="VI"
            android:textColor="#000000"
            android:ellipsize="marquee"
            android:background="#888888"
            android:textSize="32sp"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/chordVII_button"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:text="VII"
            android:textColor="#000000"
            android:ellipsize="marquee"
            android:background="#888888"
            android:textSize="32sp"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/chordI_button"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:text="I"
            android:ellipsize="marquee"
            android:background="#888888"
            android:textColor="#000000"
            android:textSize="32sp"
            android:layout_margin="5dp"/>

    </LinearLayout>
</LinearLayout>